{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@classes/*": ["classes/*"]
    }
  },
  "include": ["./src"]
}
